datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}

model Message {
  id          Int      @id @default(autoincrement())
  sender      User     @relation("SentMessages", fields: [sender_id], references: [id])
  sender_id   Int
  receiver    User     @relation("ReceivedMessages", fields: [receiver_id], references: [id])
  receiver_id Int
  content     String   @db.Text
  sent_at     DateTime @default(now())
}

model User {
  id          Int     @id @default(autoincrement())
  email       String  @unique @db.VarChar(255)
  password    String  @db.VarChar(255)
  name        String  @db.VarChar(255)
  role        String  @db.VarChar(255)
  founder_id  Int?
  investor_id Int?
  image       String? @db.MediumText
  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")
}

model Event {
  id              Int     @id @default(autoincrement())
  name            String  @db.VarChar(255)
  dates           String? @db.VarChar(255)   // keep as string per spec
  location        String? @db.VarChar(255)
  description     String? @db.Text
  event_type      String? @db.VarChar(255)
  target_audience String? @db.VarChar(255)
  image           String? @db.MediumText
}

model Founder {
  id         Int    @id @default(autoincrement())
  name       String @db.VarChar(255)
  startup_id Int
  startupDetail StartupDetail @relation(fields: [startup_id], references: [id])
  image      String? @db.MediumText
}

model Investor {
  id               Int     @id @default(autoincrement())
  name             String  @db.VarChar(255)
  legal_status     String? @db.VarChar(255)
  address          String? @db.VarChar(255)
  email            String  @db.VarChar(255)
  phone            String? @db.VarChar(255)
  created_at       String? @db.VarChar(255)  // keep as string per spec
  description      String? @db.Text
  investor_type    String? @db.VarChar(255)
  investment_focus String? @db.VarChar(255)
}

model Partner {
  id               Int     @id @default(autoincrement())
  name             String  @db.VarChar(255)
  legal_status     String? @db.VarChar(255)
  address          String? @db.VarChar(255)
  email            String  @db.VarChar(255)
  phone            String? @db.VarChar(255)
  created_at       String? @db.VarChar(255)
  description      String? @db.Text
  partnership_type String? @db.VarChar(255)
}

model NewsDetail {
  id          Int     @id @default(autoincrement())
  title       String  @db.VarChar(255)
  description String  @db.Text
  news_date   String? @db.VarChar(255)
  location    String? @db.VarChar(255)
  category    String? @db.VarChar(255)
  startup_id  Int?
  image       String? @db.MediumText
}

model StartupDetail {
  id               Int     @id @default(autoincrement())
  name             String  @db.VarChar(255)
  legal_status     String? @db.VarChar(255)
  address          String? @db.VarChar(255)
  email            String  @db.VarChar(255)
  phone            String? @db.VarChar(255)
  created_at       String? @db.VarChar(255)
  description      String? @db.Text
  website_url      String? @db.VarChar(255)
  social_media_url String? @db.VarChar(255)
  project_status   String? @db.VarChar(255)
  needs            String? @db.VarChar(255)
  sector           String? @db.VarChar(255)
  maturity         String? @db.VarChar(255)
  founders        Founder[]
}
